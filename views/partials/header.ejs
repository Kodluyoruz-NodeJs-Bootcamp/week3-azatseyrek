    <h1><a href="/"><i id="gustoLogo" class="fas fa-home"></i></a></h1>

    <ul>
      <% if (user) { %>
        <li>Welcome, <%= user.name %></li>
        <li><a class="hoverBtn" href="/logout">Log out</a></li>
      <% } else { %>
        <li><a class="hoverBtn" href="/login">Log in</a></li>
        <li><a class="hoverBtn" href="/signup">Sign up</a></li>
      <% } %>
    </ul>

  </nav>